<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/input_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/type_input_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/margin_10"
            android:visibility="visible"
            app:cardCornerRadius="@dimen/margin_5"
            app:cardElevation="@dimen/margin_10">


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textField"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_5"
                android:hint="@string/select_type"
                android:padding="@dimen/padding_5">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/sp_bill_type_value"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:inputType="none"
                    android:padding="@dimen/padding_5"
                    android:singleLine="true"
                    android:text="@string/select_type"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_base" />

            </com.google.android.material.textfield.TextInputLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/input_value_param_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/year_month_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/sp_year_input_cardview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:elevation="@dimen/margin_10"
                    android:visibility="visible"
                    app:cardCornerRadius="@dimen/margin_5"
                    app:cardElevation="@dimen/margin_10">


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/sp_year_input"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/margin_5"
                        android:hint="@string/select_year"
                        android:padding="@dimen/padding_5">

                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/sp_year_value"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:clickable="false"
                            android:drawableEnd="@drawable/ic_touch"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:gravity="center"
                            android:inputType="none"
                            android:longClickable="false"
                            android:padding="@dimen/padding_5"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textsize_base" />

                    </com.google.android.material.textfield.TextInputLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/sp_month_cardview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:elevation="@dimen/margin_10"
                    android:visibility="visible"
                    app:cardCornerRadius="@dimen/margin_5"
                    app:cardElevation="@dimen/margin_10">


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/sp_month_input"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/margin_5"
                        android:hint="@string/select_month"
                        android:padding="@dimen/padding_5">

                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/sp_month_value"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:clickable="false"
                            android:drawableEnd="@drawable/ic_touch"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:gravity="center"
                            android:inputType="none"
                            android:longClickable="false"
                            android:padding="@dimen/padding_5"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textsize_base" />

                    </com.google.android.material.textfield.TextInputLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/customer_code_input_cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="@dimen/margin_10"
                android:visibility="visible"
                app:cardCornerRadius="@dimen/margin_5"
                app:cardElevation="@dimen/margin_10">


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/customer_code_input"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/margin_5"
                    android:hint="@string/customer_id"
                    android:padding="@dimen/padding_5">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_customer_code_value"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:inputType="number"
                        android:padding="@dimen/padding_5"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize_base" />

                </com.google.android.material.textfield.TextInputLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/input_mobile_no_cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="@dimen/margin_10"
                android:visibility="visible"
                app:cardCornerRadius="@dimen/margin_5"
                app:cardElevation="@dimen/margin_10">


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/mobile_no_input"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/margin_5"
                    android:hint="@string/mobile_number"
                    android:padding="@dimen/padding_5">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_mobile_no_value"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:inputType="number"
                        android:padding="@dimen/padding_5"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize_base" />

                </com.google.android.material.textfield.TextInputLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/amount_input_cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="@dimen/margin_10"
                android:visibility="visible"
                app:cardCornerRadius="@dimen/margin_5"
                app:cardElevation="@dimen/margin_10">


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/amount_input"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/margin_5"
                    android:hint="@string/amount"
                    android:padding="@dimen/padding_5">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_amount_value"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:inputType="numberDecimal"
                        android:padding="@dimen/padding_5"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize_base" />

                </com.google.android.material.textfield.TextInputLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/btn_validate_cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input_value"
                android:elevation="@dimen/margin_10"
                android:visibility="visible"
                app:cardCornerRadius="@dimen/margin_5"
                app:cardElevation="@dimen/margin_10">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_validate"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_marginTop="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_10"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:background="@drawable/bt_background_rounded_green"
                    android:padding="@dimen/padding_5"
                    android:text="@string/validate"
                    android:textColor="@color/white"
                    android:textStyle="bold" />


            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>